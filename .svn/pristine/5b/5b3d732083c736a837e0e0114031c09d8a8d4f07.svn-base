          alertify.logPosition("bottom right");
          alertify.success('Save Successfuly');
          this.showBlockAllowance();
          this.getAllowanceTypes();
        } else {
          this.showBlockAllowance();
          alertify.delay(2000);
          alertify.logPosition("bottom right");
          alertify.error("Try Again");
        }
