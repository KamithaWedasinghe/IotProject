  keytab(event, value) {
    if (value == '') {
      //do nothing
    } else {
      if (event.keyCode === 13) {
        event.preventDefault()
        const inputs = Array.prototype.slice.call(document.querySelectorAll("input"))
        const index =
          (inputs.indexOf(document.activeElement) + 1) % inputs.length
