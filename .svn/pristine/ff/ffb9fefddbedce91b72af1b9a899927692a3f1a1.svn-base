<div class="row">
  <div class="col-sm-12">
    <div class="card form-body">
      <div class="card-header">
        <strong>Employer Registation</strong>
      </div>
      <div class="card-body">

        <!--employee registation form -->

        <form #form="ngForm" (ngSubmit)="addEmployeeRegistationDetail(form)">
           
       <!--  <div class="row">
          <div class="form-group col-sm-6 ">
            <label for="street">Employee Number</label>
            <input type="text" class="form-control"  name='emp-number' ngModel placeholder="Enter Employee Number"
            required minlength="4" forbiddenName="bob">
          </div>
        </div>  -->
        <div class="row">
          <div class="form-group col-sm-6">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control"  name='empFirstName' ngModel placeholder="Enter the first name"
             required minlength="6" forbiddenName="bob" >
             
          </div>
          <div class="form-group col-sm-6">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" name='empLastName' ngModel  placeholder="Enter the last name"
              required minlength="6" forbiddenName="bob" >
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-6">
            <label for="empCatogery">Select Catogery</label>
            <select class="form-control" id="ccmonth"  name='empCategory' ngModel>
              <option selected="true" disabled="disabled">Select Category</option> 
                <option>Doctor</option>
                <option>Nurse</option>
                <option>Attedane</option>
                <option>Labour</option>
            </select>
          </div>
          <div class="form-group col-sm-6">
            <label for="employeeDate">Date Employeed</label>
            <input type="date" class="form-control"  name='empDateEmployee' ngModel placeholder="">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-6  ">
            <label for="phoneNumber">NIC Number</label>
            <input type="text" class="form-control" name='empNicNumber' ngModel placeholder="Enter Employee The NIC Number"
             required minlength="6" forbiddenName="bob" >
          </div>
          <div class="form-group col-sm-2">
           
            <p>Gender</p>
            <label class="checkbox-inline" style="margin-top:0px">
              <input type="checkbox" name='male' ngModel value="" style="width:30px;height:20px">Male
            </label>
             
          </div>
          <div class="form-group col-sm-3 ">
            
         
             <label class="checkbox-inline" style="margin-top:40px">
               <input type="checkbox" value="" name='female' ngModel  style="width:30px;height:20px">Female
             </label>
              
           </div>
          <div>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-6  ">
            <label for="phoneNumber">Phone Number</label>
            <input type="text" class="form-control" name='empPhoneNumber' ngModel placeholder="Enter Employee The Phone Number"
             required minlength="6" forbiddenName="bob" >
          </div>
          <div class="form-group col-sm-6  ">
            <label for="email">Email Address</label>
            <input type="text" class="form-control" id="street"  name='empEmail' ngModel placeholder="Enter Employee The Email Address "
             required minlength="6" forbiddenName="bob" >
          </div>
          <div>
          </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12">
              <label for="address">Address</label>
              <input type="text" class="form-control" name='empAddress' ngModel placeholder="Enter The Address"
              required minlength="6" forbiddenName="bob">
            </div>
            
          </div>

        <div class="row">
          <div class="form-group col-sm-6">
            <label for="city">City</label>
            <input type="text" class="form-control" name='empCity' ngModel placeholder="Enter your city"
            required minlength="6" forbiddenName="bob">
          </div>
          <div class="form-group col-sm-6">
            <label for="postal-code">Postal Code</label>
            <input type="text" class="form-control" name='empPostalCode' ngModel placeholder="Postal Code"
            required minlength="6" forbiddenName="bob">
          </div>
        </div>
        <!--/.row-->
        <div class="row">
            <div class="col-sm-12 ">
                <div class="card text-white  bg-info text-center">
                    <div class="card-body">
                        <blockquote class="card-bodyquote">
                           <div class="row">
                          <div class="form-group col-sm-6">
                            <label for="salary">Employee Basic Salary</label>
                            <input type="text" class="form-control" name='empBasicSalery' ngModel placeholder="Basic Income"
                            required minlength="6" forbiddenName="bob">
                          </div>
                         
                            <div class="form-group col-sm-6">
                                <label for="country"> Employess Total Salary</label>
                                <input type="text" class="form-control" name='empTotalSalery' ngModel placeholder="Total"
                                required minlength="6" forbiddenName="bob">
                            </div>
                           </div>
                           <div class="row">
                              <div class="form-group col-sm-6">
                                  <label for="salary">Employee ETF No:</label>
                                  <input type="text" class="form-control" name='empEtf' ngModel placeholder="Basic Income"
                                  required minlength="6" forbiddenName="bob">
                               </div>
                               
                                <div class="form-group col-sm-6">
                                    <label for="salary">Employee EPF No:</label>
                                    <input type="text" class="form-control" name='empEpf' ngModel placeholder="Basic Income"
                                    required minlength="6" forbiddenName="bob">
                                </div>
                           </div>
                       </blockquote>
                    </div>
                </div>
           </div>
        </div>
        
            <button type="submit" class="btn btn-sm btn-success" ><i class="fa fa-dot-circle-o"></i> Register</button>
           
      </form>
      </div>
    </div>
  </div>
  <!--/.col5-->
</div>


